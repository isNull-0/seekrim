<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!--第1部分-->
    <TabHost android:id="@android:id/tabhost"
             android:layout_width="fill_parent"
             android:layout_height="match_parent" >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                    <RadioGroup
                            android:id="@+id/radioGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/bg_title_bar"
                            >
                        <RadioButton
                                android:id="@+id/backRadioButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_nav_back"
                                android:button="@null"
                                />

                        <RadioButton
                                android:id="@+id/nameRadioButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:text="四川菜（川菜）"
                                android:textSize="20dp"
                                android:textColor="#ffffff"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                />


                        <RadioButton

                                android:id="@+id/refreshRadioButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:background="@drawable/u125_normal"
                                android:layout_marginRight="10dp"

                                />
                        <RadioButton
                                android:id="@+id/mapRadioButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:background="@drawable/ic_map"

                                />
                    </RadioGroup>
                </LinearLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                    <Button
                            android:id="@+id/scopeButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/u39_normal"
                            android:onClick="scopeButtonOnClick"

                            >
                    </Button>
                    <TextView
                            android:id="@+id/scopeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="范围：3000m内"
                            android:textColor="#000000"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="100dp"
                            ></TextView>
                    <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/u42_normal"
                            android:layout_toRightOf="@id/scopeText"
                            android:layout_centerInParent="true"
                            >
                    </Button>
                </RelativeLayout>

            </LinearLayout>

            <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >
            </FrameLayout>
            <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            <Button
                    android:id="@+id/moreButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/u123_normal"
                    android:text="更多"
                    android:textSize="20dp"

                    >
            </Button>

        </LinearLayout>

    </TabHost>


</LinearLayout>