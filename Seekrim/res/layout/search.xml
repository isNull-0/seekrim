<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!--第1部分-->
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_title_bar"
            android:orientation="horizontal"
            >
        <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_nav_back"
                android:background="@drawable/btn_weight"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                >
        </ImageButton>
        <EditText
                android:id="@+id/editSearchText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入商户名搜索"
                android:background="@drawable/abs__textfield_search_selected_holo_dark"
                android:layout_weight="1"

                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="#CCCCB4"
                >

        </EditText>
        <ImageButton
                android:id="@+id/searchButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/abs__ic_search"
                android:background="@drawable/btn_weight"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                >
        </ImageButton>
    </LinearLayout>
    <!--第2部分-->
    <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            >
        <ListView android:id="@+id/searchListView"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"

                >
        </ListView>


    </LinearLayout>
    <LinearLayout

            android:id="@+id/moreLoad"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"

            >
       <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="更多"
               android:textSize="20dp"
               android:gravity="center"
               ></TextView>

     </LinearLayout>
</LinearLayout>